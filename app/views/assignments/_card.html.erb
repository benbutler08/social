<div class="card mb-3">
  <div class="card-header d-flex justify-content-between flex-wrap">
    <div class="w-100 d-flex justify-content-between flex-wrap">
      <div class="card-title mr-4">
        <%= assignment.name %>
      </div>
    </div>
    <div class="btn-group">
      <%= link_to 'Page', assignment, class: "btn btn-sm btn-outline-secondary" %>
      <%= link_to 'Edit', edit_assignment_path(assignment), class: "btn btn-sm btn-outline-info" %>
      <%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>      
    </div>
  </div>
  <div class="card-body">
    <%= assignment.description %>
  </div>
</div>  

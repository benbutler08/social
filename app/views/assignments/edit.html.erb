<%= render "assignments/navbar" %>

<div class="card">
	<div class="card-header">
		<div class="card-title">
			<h1><%= @assignment.name %></h1>
		</div>
	</div>
	<div class="card-body">
		<%= render 'form', assignment: @assignment %>
	</div>
	<div class="card-footer">
		<div class="btn-group">
			<%= link_to 'Show', @assignment, class: "btn btn-info" %> 
			<%= link_to 'Back', tasks_path, class: "btn btn-secondary" %>
		</div>		
	</div>
</div>




<div class="card">
	<div class="card-header">
		<div class="card-title">
			<h1><%= @recipe.name %></h1>
		</div>
	</div>
	<div class="card-body">
		<%= render 'form', recipe: @recipe %>
	</div>
	<div class="card-footer">
		<div class="btn-group">
			<%= link_to 'Show', @recipe, class: "btn btn-info" %> 
			<%= link_to 'Back', tasks_path, class: "btn btn-secondary" %>
		</div>		
	</div>
</div>




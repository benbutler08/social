<div class="card mb-3">
  <div class="card-header">
    <div class="card-title">
      <%= task.title %>
    </div>
  </div>
  <div class="card-body">
    <%= task.description %>
  </div>
  <div class="card-footer">
    <div class="btn-group">
      <td><%= link_to 'Show', task, class: "btn btn-sm btn-outline-secondary" %></td>
      <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-sm btn-outline-info" %></td>
      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
</div>
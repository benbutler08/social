<%= render 'tasks/navbar' %>

<div class="card">
	<div class="card-header">
		<div class="card-title">
			<h1><%= @task.title %></h1>
		</div>
	</div>
	<div class="card-body">
		<%= render 'form', task: @task %>
	</div>
	<div class="card-footer">
		<div class="btn-group">
			<%= link_to 'Show', @task, class: "btn btn-info" %> 
			<%= link_to 'Back', tasks_path, class: "btn btn-secondary" %>
		</div>		
	</div>
</div>




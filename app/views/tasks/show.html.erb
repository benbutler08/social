<%= render 'tasks/navbar' %>

<p id="notice"><%= notice %></p>

<div class="card">
	<div class="card-header">
		<div class="card-title">
			<%= @task.title %>
		</div>
	</div>
	<div class="card-body">
		  <%= @task.description %>
	</div>
	<div class="card-footer">
		<div class="btn-group">
			<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary" %> 
			<%= link_to 'Back', tasks_path, class: "btn btn-secondary" %>
		</div>
	</div>
</div>
